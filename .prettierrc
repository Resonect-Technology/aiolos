{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "endOfLine": "lf",
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "overrides": [
        {
            "files": "*.{js,jsx,ts,tsx}",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "*.{json,md}",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}