# Caddyfile for AdonisJS backend reverse proxy
# Replace example.com with your domain

aiolos.resonect.cz {
    reverse_proxy localhost:8080

    # Static file caching for assets (optional, adjust path as needed)
    @assets {
        path /assets/*
    }
    header @assets Cache-Control "public, max-age=31536000, immutable"

    # Optional: gzip compression
    encode gzip
}
